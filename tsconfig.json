{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    /* Projects */
    "incremental": true,

    /* Language and Environment */
    "target": "es2017",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Emit */
    "declaration": false,
    "sourceMap": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@app": [
        "./"
      ],
      "@app/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/types",
      "./types",
    ],

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,

    /* Completeness */
    "skipLibCheck": true,
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
, "src/types/express.d.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}